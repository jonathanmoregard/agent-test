cabal-version:      3.0

name:               agent-test
version:            0.1.0.0
synopsis:           An attempt at using streamly + LLM to simulate agentic behavior
license:            MIT
license-file:       LICENSE
author:             Jonathan MoregÃ¥rd
maintainer:         jonathan.moregard@protonmail.com
category:           Simulation
extra-source-files: CHANGELOG.md

library
    exposed-modules:  Effect.LLM
                      Effect.Console
    build-depends:    base ^>=4.16.4.0,
                      effectful,
                      openai-hs,
                      openai-servant,
                      http-client,
                      http-client-tls,
                      text,
                      unliftio,
                      vector
    hs-source-dirs:   src
    default-language: Haskell2010
    default-extensions: GHC2021, ImportQualifiedPost, LambdaCase, OverloadedStrings

executable agent-test
    main-is:          Main.hs
    build-depends:
        base ^>=4.16.4.0,
        effectful,
        agent-test,
        openai-hs,
        openai-servant,
        http-client,
        http-client-tls,
        text,
        unliftio,
        vector
    hs-source-dirs:   app
    default-language: Haskell2010
    default-extensions: GHC2021, ImportQualifiedPost, LambdaCase, OverloadedStrings

test-suite agent-test-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          MyLibTest.hs
    build-depends:    base ^>=4.16.4.0
    default-extensions: GHC2021, ImportQualifiedPost, LambdaCase, OverloadedStrings
